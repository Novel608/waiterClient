<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waiterclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.jiaqiang.waiterclient.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jiaqiang.waiterclient.MainMenuActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.jiaqiang.waiterclient.ModifyPasswordActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.jiaqiang.waiterclient.OrderActivity"
            android:screenOrientation="landscape" >
        </activity>
         <activity
            android:name="com.jiaqiang.waiterclient.BrowerOrderActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.jiaqiang.waiterclient.CheckoutActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>