<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imageview_background" >

            <Gallery
                android:id="@+id/main_menu_gallery"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:spacing="5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/main_menu_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_order" />

        <Button
            android:id="@+id/main_menu_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_checkout" />

        <Button
            android:id="@+id/main_menu_order_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_order_schedule1" />

        <Button
            android:id="@+id/main_menu_add_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_add_order" />

        <Button
            android:id="@+id/main_menu_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_more" />
    </LinearLayout>

</RelativeLayout>